{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@api/*": [
        "./src/app/api/*"
      ],
      "@clients/*": [
        "./src/clients/*"
      ],
      "@interfaces/*": [
        "./src/interfaces/*"
      ],
      "@partials/*": [
        "./src/app/partials/*"
      ],
      "@public/*": [
        "./public/*"
      ],
      "@utils/*": [
        "./src/app/utils/*"
      ],
      "@validators/*": [
        "./src/validators/*"
      ],
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/interfaces/**/*.ts",
    "next-sitemap.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
